<div class="movie-item">
    <div class="details">
        <img src="https://www.themoviedb.org/t/p/w780<%= movie.poster_path %>" alt="">
        
        <div class="movie-metadata">
            <div class="titledesc">
                <h1>
                    <%= movie.title %>
                </h1>
            
                <ul>
                    <% movie.genres.forEach(function(genre){ %>
                        <li>
                            <%= genre %>
                        </li>
                        <% }); %>
                </ul>
            </div>
            <h3><%= movie.release_date %></h3>
        </div>
    </div>
    <% if(movie.providers.length !== 0) { %>

        <h3>Available here: </h3>
        <ul>
            <% movie.providers.forEach(function(provider){ %>
                <li><img src="https://www.themoviedb.org/t/p/w154<%= provider.image_url %>" alt=""></img></li>
            <% }); %>
        </ul>

    <% } else { %>

        <h3 class="providers-text">No Providers Available!</h3>

    <% } %>

    <h3>Length: <%= movie.runtime %> Minutes</h3>
    <button>Watched</button>
    <button>Ignore Suggestion</button>
</div>
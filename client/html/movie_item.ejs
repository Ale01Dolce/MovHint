<div class="movie-card" id="<%= movie.MovieDBid %>">
    <figure class="card-banner">
        <img src="https://www.themoviedb.org/t/p/w780<%= movie.poster_path %>" alt="">
    </figure>

    <div class="title-wrapper">
        <h3 class="card-title">
            <%= movie.title %>
        </h3>

        <time>
            <%= movie.release_date %>
        </time>
    </div>
    <p>
        <%= movie.overview %>
    </p>
    <% if(movie.providers.length !==0) { %>
        <div class="providers-section">
            <h3>Available here: </h3>
            <ul class="movie-providers">
                <% movie.providers.forEach(function(provider){ %>
                    <li><img src="https://www.themoviedb.org/t/p/w154<%= provider.logo_path %>" alt=""></img></li>
                    <% }); %>
            </ul>
        </div>


    <% } else { %>
        <h3 class="providers-text">No Providers Available!</h3>
    <% } %>

    <h3 class="length-text">Length: <%= movie.runtime %> Minutes</h3>
    <div class="social-links">

        <a class="social-s-icon" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.themoviedb.org%2Fmovie%2F<%= movie.MovieDBid %>">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" class="facebook-icon"
                style="fill: rgb(255, 255, 255)">
                <path
                    d="M12.001 2.002c-5.522 0-9.999 4.477-9.999 9.999 0 4.99 3.656 9.126 8.437 9.879v-6.988h-2.54v-2.891h2.54V9.798c0-2.508 1.493-3.891 3.776-3.891 1.094 0 2.24.195 2.24.195v2.459h-1.264c-1.24 0-1.628.772-1.628 1.563v1.875h2.771l-.443 2.891h-2.328v6.988C18.344 21.129 22 16.992 22 12.001c0-5.522-4.477-9.999-9.999-9.999z">
                </path>
            </svg> 
        </a>

        <a target="_blank" href="https://twitter.com/intent/tweet?url=https%3A%2F%2Fwww.themoviedb.org%2Fmovie%2F<%= movie.MovieDBid %>">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" class="twitter-icon"
                style="fill: rgb(255, 255, 255)">
                <path
                    d="M19.633 7.997c.013.175.013.349.013.523 0 5.325-4.053 11.461-11.46 11.461-2.282 0-4.402-.661-6.186-1.809.324.037.636.05.973.05a8.07 8.07 0 0 0 5.001-1.721 4.036 4.036 0 0 1-3.767-2.793c.249.037.499.062.761.062.361 0 .724-.05 1.061-.137a4.027 4.027 0 0 1-3.23-3.953v-.05c.537.299 1.16.486 1.82.511a4.022 4.022 0 0 1-1.796-3.354c0-.748.199-1.434.548-2.032a11.457 11.457 0 0 0 8.306 4.215c-.062-.3-.1-.611-.1-.923a4.026 4.026 0 0 1 4.028-4.028c1.16 0 2.207.486 2.943 1.272a7.957 7.957 0 0 0 2.556-.973 4.02 4.02 0 0 1-1.771 2.22 8.073 8.073 0 0 0 2.319-.624 8.645 8.645 0 0 1-2.019 2.083z">
                </path>
            </svg>
        </a>
    </div>
    <div class="card-buttons">
        <button class="sub-btm" onclick="watched('<%= movie.MovieDBid %>')">Watched&nbsp;<div
                class="loader-dashboard watched"></div></button>
        <button class="sub-btm" onclick="remove('<%= movie.MovieDBid %>')">Ignore&nbsp;<div
                class="loader-dashboard ignore"></div>
        </button>
    </div>
</div>
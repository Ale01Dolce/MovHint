<li>
    <div class="movie-card">
        <figure class="card-banner">
            <img src="https://www.themoviedb.org/t/p/w780<%= movie.poster_path %>" alt="">
        </figure>

        <div class="title-wrapper">
            <h3 class="card-title">
                <%= movie.title %>
            </h3>

            <time>
                <%= movie.release_date %>
            </time>
        </div>

        <% if(movie.providers.length !==0) { %>
            <div class="providers-section">
                <h3>Available here: </h3>
                <ul class="movie-providers">
                    <% movie.providers.forEach(function(provider){ %>
                        <li><img src="https://www.themoviedb.org/t/p/w154<%= provider.logo_path %>" alt=""></img></li>
                        <% }); %>
                </ul>
            </div>


            <% } else { %>
                <h3 class="providers-text">No Providers Available!</h3>
                <% } %>
    </div>
</li>